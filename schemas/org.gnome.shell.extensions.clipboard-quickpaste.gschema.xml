<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.clipboard-quickpaste" path="/org/gnome/shell/extensions/clipboard-quickpaste/">
    <key name="ctrl-right-arrow" type="as">
      <default>['&lt;Primary&gt;Right']</default>
      <summary>Ctrl + Right Arrow keybinding</summary>
      <description>Global keybinding for quick-paste extension</description>
    </key>
    <key name="clipboard-quickpaste-history" type="as">
      <default>[]</default>
      <summary>Persistent list</summary>
      <description>
        Array of strings (each string is clipboard content).
      </description>
    </key>
    <key name="clipboard-quickpaste-maxitems" type="i">
      <default>50</default>
      <summary>max items</summary>
      <description>
        Number of max items in clipboard.
      </description>
    </key>
  </schema>
</schemalist>